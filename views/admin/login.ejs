<%- include('../layout/adminHeader')%>

<body>

    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-12 mx-auto tm-login-col">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12 text-center">
                <h2 class="tm-block-title mb-4">Welcome to Admin, Login</h2>
              </div>
            </div>
            <div class="row mt-2">
              <div class="col-12">
                <form action="/admin" method="post" class="tm-login-form">
                  <div class="form-group">
                    <label for="email">Username</label>
                    <input
                      name="email"
                      type="email"
                      class="form-control validate"
                      id="username"
                      value=""
                      required
                    />
                  </div>
                  <% if(locals.emailErr) { %>
                    <div id="msg" class="alert alert-danger ml-4 "><%- locals.emailErr -%></div>
                  <% } %> 
                  <div class="form-group mt-3">
                    <label for="password">Password</label>
                    <input
                      name="password"
                      type="password"
                      class="form-control validate"
                      id="password"
                      value=""
                      required
                    />
                  </div>
                  <% if(locals.passErr) { %>
                    <div id="msg" class="alert alert-danger ml-4 "><%- locals.passErr -%></div>
                    <% } %> 
                  <div class="form-group mt-4">
                    <button
                      type="submit"
                      class="btn btn-primary btn-block text-uppercase"
                    >
                      Login
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
        setTimeout(()=>{
            document.getElementById('msg').style.display='none'
        },3000)
    </script>
</body>
<%- include('../layout/adminFooter')%>

