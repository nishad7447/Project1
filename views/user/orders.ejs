<%- include('../layout/userHeader')%>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

<div class="hero-wrap hero-bread " style="background-image: url('/assets/images/bg_6.jpg');">
  <div class="container">
    <div class="row no-gutters slider-text align-items-center justify-content-center">
      <div class="col-md-9 ftco-animate text-center">
          <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span> <span><a href="/order">&nbsp;Orders </a>&nbsp; Ordered Products</span></p>
        <h1 class="mb-0 bread"> Orders </h1>
      </div>
    </div>
  </div>
</div>

    <section class=" contact-section bg-light pt-5">
      <!-- <div class="text-center h1 p-5" style="font-weight: 700;">Orders</div> -->
      <div class="container">
        <table id="myTable" class="table table-hover tm-table-small tm-product-table">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Item</th>
                    <th scope="col">Address</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Payment</th>
                    <th scope="col">Status</th>
                    <th scope="col">View</th>
                  </tr>
              </thead>
              <tbody> 
                <% if (data ) { %>
                  <% data.forEach(function (order) { %>
                        <tr>
                            <td class="tm-product-name"><%= order.date %></td>
                            <td> <% order.item.forEach(function (item) { %><%= item.product.name %> <br> <% }) %></td>
                            <td><%= order.shippingAddress.address + ', ' + order.shippingAddress.zipcode %></td>
                            <td><%= order.shippingAddress.mobile %></td>
                            <td><%= order.paymentMethod %></td>
                            <td><%= order.status %></td>
                            <td>
                                <a href="/orderDetail/<%= order._id %>" class="btn btn-secondary ">View Details</a>
                            </td>
                        </tr>
                <% }) %>      
                <% } else { %>
                  <tr>
                    <td colspan="8">Nothing found</td>
                  </tr>
                <% } %>          
                  </tbody>
              </table>
      </div>

     

    </section> 
  <!-- loader -->
  <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00"/></svg></div>
  
  <script>
     $(document).ready(function () {
                $('#myTable').DataTable();
              });
              let table = new DataTable('#myTable');
  </script>
  
