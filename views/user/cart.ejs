<%- include('../layout/userHeader')%>


<div class="hero-wrap hero-bread mb-3" style="background-image: url('/assets/images/bg_6.jpg'); ">
	<div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center">
			<div class="col-md-9 ftco-animate text-center">
				<p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span> </p>
				<h1 class="mb-0 bread">Cart</h1>
			</div>
		</div>
	</div>
</div>
	<!-- <section class="ftco-section ftco-cart"> -->
	<div class="container mb-5">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="cart-list" style="border-radius: 10px;">
					<% if(CartData.length===0 && !total) { %>
						<div class="row mt-5 mb-5 d-flex flex-column align-items-center col-md-12 ftco-animate" >
							<span class="icon-shopping_cart m-5" style="font-size:100px;color:red"></span>
							<h1 class="m-5">Nothing In The Cart !!!</h1>
						</div>
						<% } else { %>
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
									<th>&nbsp;</th>
									<th>&nbsp;Image</th>
									<th>Product</th>
									<th>Price</th>
									<th>Quantity</th>
									<th>Total</th>
								</tr>
							</thead>
							<tbody>
								<% CartData.forEach(function(CartData) { %>
									<tr class="text-center">
										<td class="product-remove"><a
												href="/deleteCartItem/<%= CartData.product._id%>"><span
													class="ion-ios-close"></span></a></td>

										<td class="image-prod">
											<div class="img"
												style="background-image:url('<%= CartData.product.images[0] %>'); background-size: contain;">
											</div>
										</td>

										<td class="product-name">
											<h3>
												<%= CartData.product.name %>
											</h3>
											<p>
												<%= CartData.product.description %>
											</p>
										</td>

										<td class="price">Rs.<%= CartData.product.price %>
										</td>

										<td class="quantity">
											<div class="input-group mb-3">
												<div class="mb-0">
													<span class="btn bg-transparent mr-2 text-center mt-2" id="minus"
														onclick="changeQuantity('<%= CartData.product._id%>', -1,'<%= CartData.product.price%>')"
														style="color: rgb(0, 0, 0);border-color: rgb(192, 192, 192);">&nbsp;-&nbsp;</span>
												</div>
												<input type="text" name="quantity" disabled id="<%= CartData.product._id%>"
													class="quantity form-control input-number"
													value="<%= CartData.quantity %>" min="1" max="100">
												<div class="mb-0">
													<span class="btn btn-dark bg-transparent ml-2 text-center mt-2"
														onclick="changeQuantity('<%= CartData.product._id%>', 1,'<%= CartData.product.price%>')"
														style="color: black;border-color: rgb(192, 192, 192);">&nbsp;+&nbsp;</span>
												</div>
											</div>
											<span class="text-danger" style="font-weight: bold; display:none;" id="out-of-stock-<%= CartData.product._id %>">out of stock</span>
											<input class="quantity form-control input-number text-center border-0 p-1" disabled id="stocks-<%= CartData.product._id %>" value='<%= CartData.product.stock - CartData.quantity %>'>
										</td>

										<td  id="sub-<%= CartData.product._id %>" class="total"><%= CartData.product.price * CartData.quantity %></td>
									</tr><!-- END TR-->
									<% }); %>
							</tbody>
						</table>
				</div>
			</div>
		</div>
					<div class="row justify-content-center">
						<div class="col col-lg-5 col-md-6 mt-5 cart-wrap ftco-animate">
							<div class="cart-total mb-3">
								<h3>Cart Totals</h3>
								<p class="d-flex">
									<span>Subtotal</span>
									₹<span id="total"><%= total%></span>
								</p>
								<p class="d-flex">
									<span>Discount</span>
									<span>₹3.00</span>
								</p>
								<hr>
								<p class="d-flex total-price">
									<span>Total</span>
									₹<span id="total1"><%= total%></span>
								</p>
							</div>
							<p class="text-center"><a href="/checkout" class="btn btn-primary py-3 px-4">Proceed to
									Checkout</a></p>
						</div>
					</div>
					<% } %>
	</div>
	<!-- </section> -->



	<!-- loader -->
	<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px">
			<circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
			<circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10"
				stroke="#F96D00" />
		</svg></div>

		
