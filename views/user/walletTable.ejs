<%- include('../layout/userHeader')%>

<div class="hero-wrap hero-bread" style="background-image: url('/assets/images/bg_6.jpg');">
  <div class="container">
      <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
              <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span> <span><a
                          href="/wallet">&nbsp;Wallet </a></span></p>
              <h1 class="mb-0 bread">Wallet Table details</h1>
          </div>
      </div>
  </div>
</div>

<section class="container bg-white mt-3" style="overflow-x: hidden;">
    
    <div class="text-center py-5">
    <div class="d-flex">
        <span class="mx-auto text-dark pb-4" style="font-size: larger;text-decoration: underline;">Wallet Transaction Details</span>
    </div>
      <div class="row table-responsive col-lg-12">
        <table class="table table-bordered" style="width:100%">
          <thead class="text-dark">
            <tr>
              <th style="font-weight: bold;" scope="col">Date</th>
              <th style="font-weight: bold;" scope="col">Transaction Id</th>
              <th style="font-weight: bold;" scope="col">Transaction source</th>
              <th style="font-weight: bold;" scope="col">Amount</th>
            </tr>
          </thead>
          <tbody>
                <% if(wallet){ %>
                <% wallet.data.forEach(function(walletData) { %>
                <tr>
                    <th class="text-dark"> <%= walletData.date %> </th>
                    <th class="text-dark"> <%= walletData.orderId %> </th>
                    <th class="text-dark"> <%= walletData.source %> </th>
                    <th class="text-dark"> <%= walletData.transAmt %> </th>
                </tr>
                <% }) %>
                <% } %>
            </tbody>
        </table>
      </div>
    </div>
</section>

<%- include('../layout/userFooter')%>
